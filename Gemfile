source 'https://rubygems.org'


gem 'rails', '4.2.3'

gem 'rails-api'

# To use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# To use Jbuilder templates for JSON
gem 'jbuilder'

group :production do
	gem "pg"
end

group :development, :test do
	gem 'sqlite3'
	gem 'spring'
	gem "annotate"
  #Testing Gems
  gem 'shoulda-matchers'
  gem 'rspec-rails'
  gem "factory_girl_rails", "~> 4.0"
  gem 'capybara'
  gem 'capybara-webkit'

end



